<UserControl x:Class="Eulg.Setup.Pages.InstProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="480"
             d:DesignHeight="300"
             mc:Ignorable="d">

    <StackPanel Name="AreaProgress" HorizontalAlignment="Stretch">
        <TextBlock Name="LabelProgress"
                   HorizontalAlignment="Left"
                   Text="Bitte warten..." />
        <TextBlock Name="LabelFileCount"
                   HorizontalAlignment="Left"
                   Text="0 von 0" />
        <ProgressBar Name="ProgressBar"
                     Height="20"
                     Margin="0,10,0,0" />
        <Button Width="100"
                MinHeight="28"
                Margin="0,20,0,0"
                Click="ButtonBase_OnClick"
                Content="Abbrechen" />
    </StackPanel>
</UserControl>
