<UserControl x:Class="Eulg.Setup.Pages.InstWelcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="480"
             d:DesignHeight="400"
             mc:Ignorable="d">

    <StackPanel>
        <TextBlock FontSize="14" TextWrapping="Wrap">Der Installations-Assistent wird EULG auf Ihrem Computer installieren. Klicken Sie auf Weiter, um mit der Installation fortzufahren oder schließen Sie das Fenster, um den Assistenten zu beenden.</TextBlock>
        <Image Height="256"
               Margin="0 30 0 0"
               Source="Setup-Eulg.png" />

        <Canvas>
            <!--  OMG HAX bwahaha  -->
            <StackPanel Margin="0 28 0 0">
                <Label x:Name="LblVersion"
                       Content="1.2.3"
                       FontSize="10"
                       Foreground="#D08080"
                       Padding="0 2" />
                <Label FontSize="10" Padding="0 2">
                    <Hyperlink Click="EditProxySettings">
                        <Run Text="Proxy-Einstellungen konfigurieren ..." />
                    </Hyperlink>
                </Label>
            </StackPanel>
        </Canvas>
    </StackPanel>
</UserControl>
