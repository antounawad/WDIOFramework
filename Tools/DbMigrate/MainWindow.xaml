<Window x:Class="DbMigrate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DbMigrate"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical">
            <ProgressBar x:Name="ProgressBarStep" Height="24" Margin="8,2"/>
            <ProgressBar x:Name="ProgressBarTotal" Height="24" Margin="8,2"/>
        </StackPanel>
        <StackPanel>
            <Button x:Name="BtnStart" Content="Start" Click="BtnStart_OnClick"/>
        </StackPanel>
    </DockPanel>
</Window>
